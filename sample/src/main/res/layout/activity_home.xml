<?xml version="1.0" encoding="UTF-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f6f5f8"
  tools:context=".static.HomeActivity"
  tools:ignore="Overdraw,HardcodedText,ContentDescription,TooManyViews">

  <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="?actionBarSize"
      app:title="Home"/>
  </com.google.android.material.appbar.AppBarLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <RelativeLayout style="@style/Widget.Home.ProfileContainer">

            <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/profile1_progress"
              style="@style/Widget.Home.ProfileProgress"
              android:progress="70"/>

            <com.makeramen.roundedimageview.RoundedImageView
              style="@style/Widget.Home.ProfileImage"
              android:layout_alignStart="@id/profile1_progress"
              android:layout_alignTop="@id/profile1_progress"
              android:layout_alignEnd="@id/profile1_progress"
              android:layout_alignBottom="@id/profile1_progress"
              android:src="@drawable/pic_peggy"/>

            <TextView
              android:id="@+id/profile1_name"
              style="@style/Widget.Home.ProfileText"
              android:text="Peggy"/>

            <com.google.android.material.chip.Chip
              style="@style/Widget.Home.ProfileChip"
              android:layout_above="@id/profile1_name"
              android:text="20h"/>
          </RelativeLayout>

          <RelativeLayout style="@style/Widget.Home.ProfileContainer">

            <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/profile2_progress"
              style="@style/Widget.Home.ProfileProgress"
              android:progress="50"/>

            <com.makeramen.roundedimageview.RoundedImageView
              style="@style/Widget.Home.ProfileImage"
              android:layout_alignStart="@id/profile2_progress"
              android:layout_alignTop="@id/profile2_progress"
              android:layout_alignEnd="@id/profile2_progress"
              android:layout_alignBottom="@id/profile2_progress"
              android:src="@drawable/pic_bobby"/>

            <TextView
              android:id="@+id/profile2_name"
              style="@style/Widget.Home.ProfileText"
              android:text="Bobby"/>

            <com.google.android.material.chip.Chip
              style="@style/Widget.Home.ProfileChip"
              android:layout_above="@id/profile2_name"
              android:text="8h"/>
          </RelativeLayout>

          <RelativeLayout style="@style/Widget.Home.ProfileContainer">

            <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/profile3_progress"
              style="@style/Widget.Home.ProfileProgress"
              android:progress="30"/>

            <com.makeramen.roundedimageview.RoundedImageView
              style="@style/Widget.Home.ProfileImage"
              android:layout_alignStart="@id/profile3_progress"
              android:layout_alignTop="@id/profile3_progress"
              android:layout_alignEnd="@id/profile3_progress"
              android:layout_alignBottom="@id/profile3_progress"
              android:src="@drawable/pic_luanne"/>

            <TextView
              android:id="@+id/profile3_name"
              style="@style/Widget.Home.ProfileText"
              android:text="Luanne"/>

            <com.google.android.material.chip.Chip
              style="@style/Widget.Home.ProfileChip"
              android:layout_above="@id/profile3_name"
              android:text="20m"/>
          </RelativeLayout>

          <RelativeLayout style="@style/Widget.Home.ProfileContainer">

            <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/profile4_progress"
              style="@style/Widget.Home.ProfileProgress"
              android:progress="80"/>

            <com.makeramen.roundedimageview.RoundedImageView
              style="@style/Widget.Home.ProfileImage"
              android:layout_alignStart="@id/profile4_progress"
              android:layout_alignTop="@id/profile4_progress"
              android:layout_alignEnd="@id/profile4_progress"
              android:layout_alignBottom="@id/profile4_progress"
              android:src="@drawable/pic_dale"/>

            <TextView
              android:id="@+id/profile4_name"
              style="@style/Widget.Home.ProfileText"
              android:text="Dale"/>

            <com.google.android.material.chip.Chip
              style="@style/Widget.Home.ProfileChip"
              android:layout_above="@id/profile4_name"
              android:text="46m"/>
          </RelativeLayout>

          <RelativeLayout style="@style/Widget.Home.ProfileContainer">

            <com.google.android.material.progressindicator.CircularProgressIndicator
              android:id="@+id/profile5_progress"
              style="@style/Widget.Home.ProfileProgress"
              android:progress="40"/>

            <com.makeramen.roundedimageview.RoundedImageView
              style="@style/Widget.Home.ProfileImage"
              android:layout_alignStart="@id/profile5_progress"
              android:layout_alignTop="@id/profile5_progress"
              android:layout_alignEnd="@id/profile5_progress"
              android:layout_alignBottom="@id/profile5_progress"
              android:src="@drawable/pic_jeff"/>

            <TextView
              android:id="@+id/profile5_name"
              style="@style/Widget.Home.ProfileText"
              android:text="Jeff"/>

            <com.google.android.material.chip.Chip
              style="@style/Widget.Home.ProfileChip"
              android:layout_above="@id/profile5_name"
              android:text="2h"/>
          </RelativeLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView style="@style/Widget.Home.CardContainer">

          <LinearLayout
            style="@style/Widget.Home.Card"
            android:orientation="horizontal">

            <FrameLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="16dp">

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="#33447afe"
                app:riv_corner_radius="28dp"/>

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:src="#66447afe"
                app:riv_corner_radius="22dp"/>

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="?colorPrimary"
                app:riv_corner_radius="16dp"/>

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/fill_nearby"
                app:tint="@android:color/white"/>
            </FrameLayout>

            <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:gravity="center_vertical"
              android:orientation="vertical">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arlen, 500m"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="18 posts found"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"/>
            </LinearLayout>

            <ImageView
              android:layout_width="2dp"
              android:layout_height="40dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:src="#f6f6f6"/>

            <Spinner
              android:id="@+id/spinner"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/Widget.Home.CardContainer">

          <LinearLayout
            style="@style/Widget.Home.Card"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/pic_hank"
                app:riv_corner_radius="24dp"/>

              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hank Hill"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

              <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                  android:layout_width="32dp"
                  android:layout_height="32dp"
                  android:layout_gravity="center"
                  android:src="?colorTertiary"
                  app:riv_corner_radius="14dp"/>

                <com.deepan.pieprogress.PieProgress
                  android:id="@+id/pieProgress"
                  android:layout_width="24dp"
                  android:layout_height="24dp"
                  android:layout_gravity="center"
                  android:layout_marginStart="1.5dp"
                  android:layout_marginTop="1.5dp"
                  app:progressColor="@android:color/black"/>
              </FrameLayout>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:20"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
              android:layout_width="match_parent"
              android:layout_height="192dp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="16dp"
              android:scaleType="centerCrop"
              android:src="@drawable/img_grill"
              app:riv_corner_radius="32dp"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/outline_location"
                app:tint="@android:color/black"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hill Family's House"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="#e0e0e0"
                app:riv_corner_radius="2dp"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200m"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
            </LinearLayout>

            <com.hanggrian.socialview.SocialTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="16dp"
              android:text="That's a clean burning grill. #itellyouwhat\n\n@peggy @bobby"
              android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_likes"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:text="94"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_comments"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="16dp"
                android:text="4"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"/>

              <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_share"/>
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView style="@style/Widget.Home.CardContainer">

          <LinearLayout
            style="@style/Widget.Home.Card"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="horizontal">

              <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/pic_peggy"
                app:riv_corner_radius="24dp"/>

              <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hank"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"/>

              <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                  android:layout_width="28dp"
                  android:layout_height="28dp"
                  android:layout_gravity="center"
                  android:src="#f4d9f4"
                  app:riv_corner_radius="14dp"/>
              </FrameLayout>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23:20"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"/>
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>
      </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="96dp"
      android:background="@android:color/black"
      android:paddingBottom="16dp">

      <LinearLayout style="@style/Widget.Home.TabContainer">

        <ImageView
          style="@style/Widget.Home.Tab"
          android:src="@drawable/fill_home"/>
      </LinearLayout>

      <LinearLayout style="@style/Widget.Home.TabContainer">

        <ImageView
          style="@style/Widget.Home.Tab"
          android:src="@drawable/outline_feeds"/>
      </LinearLayout>

      <LinearLayout style="@style/Widget.Home.TabContainer">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/outline_post"
          app:backgroundTint="?colorSecondary"
          app:maxImageSize="30dp"
          app:tint="@android:color/white"/>
      </LinearLayout>

      <LinearLayout style="@style/Widget.Home.TabContainer">

        <ImageView
          style="@style/Widget.Home.Tab"
          android:src="@drawable/outline_notifications"/>
      </LinearLayout>

      <LinearLayout style="@style/Widget.Home.TabContainer">

        <com.makeramen.roundedimageview.RoundedImageView
          android:layout_width="36dp"
          android:layout_height="36dp"
          android:src="@drawable/pic_hank"
          app:riv_corner_radius="18dp"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
